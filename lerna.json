{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "1.2.0",
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "release/*",
        "feature/*"
      ],
      "message": "chore(release): publish %s"
    },
    "changelog": {
      "nextVersion": "Next version %v"
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
